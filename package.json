    "clsx": "^1.2.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "embla-carousel-autoplay": "^8.5.2",
    "embla-carousel-vue": "^8.5.2",
    "gapi-script": "^1.2.0",
    "hono": "^4.7.11",
    "knex": "^3.1.0",
    "lucide-vue-next": "^0.479.0",
    "mysql2": "^3.14.1",
    "ofetch": "^1.0.1",
    "pg": "^8.16.0",
    "pinia": "^3.0.3",
    "qrcode": "^1.5.4",
    "radix-vue": "^0.1.27",
