{
  "name": "jboilerplate",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A modern Vue 3 boilerplate with TypeScript, Shadcn UI, and more",
  "keywords": [
    "vue",
    "vue3",
    "boilerplate",
    "typescript",
    "shadcn",
    "starter",
    "template"
  ],
  "license": "MIT",
  "author": {
    "name": "Your Name",
    "email": "your-email@example.com"
  },
  "bin": {
    "jboilerplate": "./src/cli/index.js"
  },
  "files": [
    "dist",
    "templates",
    "src/cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/jboilerplate"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "pnpm run build",
    "setup": "pnpm install && pnpm run build",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed:make": "knex seed:make",
    "seed:run": "knex seed:run",
    "cli:setup": "cd cli && pnpm run build && pnpm run start setup",
    "docker:full": "docker-compose --profile with-db up -d",
    "docker:app-only": "docker-compose -f docker-compose.app-only.yml up -d"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@internationalized/date": "^3.7.0",
